{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-12">
			<h3>Order #{{ order.id }}</h3>
			<hr>

			<div class="row">
				<div class="col-md-6">
					<h4>Destinatario</h4>
					{{ order.address.address1 }}<br>
					{{ order.address.address2 }}<br>
					{{ order.address.city }}<br>
					{{ order.address.postal_code }}<br>
				</div>
				<div class="col-md-6">
					<h4>Articulos</h4>
					{% for product in order.products %}
						<a href="{{ path_for('product.get', {slug: product.slug}) }}">{{ product.title }}</a> (x {{ product.pivot.quantity }})<br>
					{% endfor %}
				</div>
			</div>

			<hr>

			<p>
				Gasto de envio: $15.00 USD <br>
				<strong>Orden total: ${{ order.total | number_format(2) }} USD</strong>	
			</p>

		</div>
	</div>

{% endblock %}